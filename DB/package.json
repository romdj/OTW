{
  "name": "otw-database",
  "version": "0.1.0",
  "description": "Database schemas and validation for otw.sport platform",
  "type": "module",
  "scripts": {
    "test": "NODE_OPTIONS='--experimental-vm-modules' jest",
    "test:watch": "NODE_OPTIONS='--experimental-vm-modules' jest --watch",
    "test:coverage": "NODE_OPTIONS='--experimental-vm-modules' jest --coverage",
    "validate": "npm test",
    "validate:mongodb": "NODE_OPTIONS='--experimental-vm-modules' jest __tests__/mongodb",
    "validate:neo4j": "NODE_OPTIONS='--experimental-vm-modules' jest __tests__/neo4j"
  },
  "devDependencies": {
    "jest": "^30.0.5",
    "@babel/preset-env": "^7.26.0",
    "babel-jest": "^30.0.5"
  },
  "jest": {
    "testEnvironment": "node",
    "transform": {},
    "testMatch": [
      "**/__tests__/**/*.test.js"
    ],
    "collectCoverageFrom": [
      "**/*.js",
      "!**/node_modules/**",
      "!**/__tests__/**"
    ]
  }
}