{
  "name": "otw-graphql-server",
  "version": "0.1.0",
  "main": "index.js",
  "scripts": {
    "start": "node --import tsx src/server.ts",
    "dev": "nodemon --exec npm start",
    "build": "tsc",
    "test": "NODE_OPTIONS='--experimental-vm-modules' npx jest",
    "test:coverage": "NODE_OPTIONS='--experimental-vm-modules' npx jest --coverage --passWithNoTests",
    "test:watch": "NODE_OPTIONS='--experimental-vm-modules' npx jest --watch",
    "lint": "eslint \"src/**/*.ts\" \"tests/**/*.ts\"",
    "check": "tsc --noEmit"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "description": "GraphQL server for otw - The IMDb of Sporting Events",
  "dependencies": {
    "@graphql-tools/graphql-file-loader": "^8.0.1",
    "@graphql-tools/load": "^8.0.2",
    "dotenv": "^17.2.1",
    "fastify": "^5.4.0",
    "got": "^14.4.5",
    "graphql": "^16.9.0",
    "mercurius": "^16.2.0",
    "pino-pretty": "^13.0.0"
  },
  "devDependencies": {
    "@types/jest": "^30.0.0",
    "@types/node": "^24.2.1",
    "jest": "^30.0.5",
    "jest-mock": "^30.0.5",
    "nock": "^14.0.10",
    "nodemon": "^3.1.7",
    "ts-jest": "^29.2.5",
    "ts-node": "^10.9.2",
    "tsx": "^4.20.3"
  },
  "type": "module",
  "ts-node": {
    "esm": true
  }
}
